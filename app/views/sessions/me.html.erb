<div class="container">
  <% if flash[:notice] %>
    <div class="alert alert-primary"><%= flash[:notice] %></div>
  <% end %>

  <% if flash[:danger] %>
    <div class="alert alert-danger"><%= flash[:danger] %></div>
  <% end %>

  <h3>マイページ</h3>

  <div class="userlinks clearfix">
    <h4><%= @current_user.name %></h4>
  
    <div class="float-right">
      <%= link_to 'フォロー', follows_user_path(@current_user.id), class: 'btn btn-outline-dark' %>
      <%= link_to 'フォロワー', followers_user_path(@current_user.id), class: 'btn btn-outline-dark' %>

      <% if @current_user.private == true %>
        <%= link_to 'フォローリクエスト一覧', user_requests_path(@current_user.id), class: 'btn btn-outline-dark' %>
      <% end %>

      <%= link_to '編集', edit_user_path(@current_user), class: 'btn btn-outline-dark' %>
    </div>
  </div>

  <%= render partial: 'users/boards_index', locals: {board: @boards} %>
</div>
