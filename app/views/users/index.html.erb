<div class="container">
  <h3>ユーザー検索</h3>

  <% if flash[:notice] %>
    <div class="alert alert-danger"><%= flash[:notice] %></div>
  <% end %>

  <div class="searchform">
    <%= search_form_for @q do |f| %>
      <%= f.label :name, "ユーザー名" %>
      <%= f.search_field :name_cont %>
      <%= f.submit "検索" %>
    <% end %>
  </div>

  <%= render partial: 'index', locals: { user: @user } %>
</div>
